<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cakrawala.Views.LoginPage"
             Title="Login">
    <StackLayout Margin="20" HorizontalOptions="Center" VerticalOptions="Center" WidthRequest="300">
        <Label Text="Login ke Cakrawala" FontSize="Large" HorizontalTextAlignment="Center" Margin="0,0,0,30"/>
        <FlexLayout Direction="Column" JustifyContent="Center" AlignContent="Center">
            <Label>Email</Label>
            <Editor x:Name="email"/>
        </FlexLayout>
        <FlexLayout Direction="Column">
            <Label>Password</Label>
            <Editor/>
        </FlexLayout>
        <Button x:Name="LoginButton" Text="Login" Clicked="LoginButton_Clicked"></Button>
        <Button Text="Login dengan Google"></Button>
    </StackLayout>
</ContentPage>